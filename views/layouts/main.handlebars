  <!-- modals to be displayed when user clicks on login or sign up --->

{{#if errorsLoginId}}
    <div id="myModal" style="display: block" class="modal">
{{else}}
    {{#if errorsLoginPassword}}
        <div id="myModal" style="display: block" class="modal">
    {{else}}
        <div id="myModal" class="modal">
    {{/if}}
{{/if}}
        <div class="modal-content">
        <span class="close">&times;</span>

        <h2>Login</h2>

        <form action="/" method="POST">

            <label for="loginuserid"><p>E-mail address or mobile phone number</p></label>
            <input type="text" id="loginuserid" name="loginuserid" value="{{this.loginInputId}}">
                {{#each errorsLoginId}}
                    <div class="errors"><p>{{this}}</p></div>
                {{/each}}

            <label for="loginpassword"><p>Password</p></label>
            <input type="password" id="loginpassword" name="loginpassword" value="{{this.loginInputPassword}}"><br>
                {{#each errorsLoginPassword}}
                    <div class="errors"><p>{{this}}</p></div>
                {{/each}}

            <input type="submit" id="loginsubmit" value="Continue">
        </form>

        </div>

    </div>


{{#if errorsSignupName}}
    <div id="myModal2" style="display: block" class="modal">
{{else}}
    {{#if errorsSignupEmail}}
        <div id="myModal2" style="display: block" class="modal">
    {{else}}
        {{#if errorsSignupPassword}}
            <div id="myModal2" style="display: block" class="modal">
        {{else}}
            {{#if errorsSignupPasswordConfirmation}}
                <div id="myModal2" style="display: block" class="modal">
            {{else}}
                <div id="myModal2" class="modal">
            {{/if}}
        {{/if}}
    {{/if}}
{{/if}}

    <div class="modal-content">
      <span class="close2">&times;</span>
      <h2>Sign Up</h2>

      <form action="/dashboard" method="POST">
          <label for="signupusername"><p>Your name</p></label>
          <input type="text" id="signupusername" name="signupusername" value="{{this.signupInputName}}">
                {{#each errorsSignupName}}
                    <div class="errors"><p>{{this}}</p></div>
                {{/each}}

          <label for="signupemail"><p>E-mail</p></label>
          <input type="text" id="signupemail" name="signupemail" value="{{this.signupInputEmail}}">
                {{#each errorsSignupEmail}}
                    <div class="errors"><p>{{this}}</p></div>
                {{/each}}

          <label for="signuppassword"><p>Password</p></label>
          <input type="password" id="signuppassword" name="signuppassword" value="{{this.signupInputPassword}}">
                {{#each errorsSignupPassword}}
                    <div class="errors"><p>{{this}}</p></div>
                {{/each}}

          <label for="signuppasswordconfirmation"><p>Please re-enter password</p></label>
          <input type="password" id="signuppasswordconfirmation" name="signuppasswordconfirmation" value="{{this.signupInputPasswordConfirmation}}">
                {{#each errorsSignupPasswordConfirmation}}
                    <div class="errors"><p>{{this}}</p></div>
                {{/each}}

          <input type="submit" id="submit-signup" value="Create mygiftshop account">
      </form>

    </div>
  </div>

  <script src="js-front/mainfrontend.js"></script>

</body>

</html>