  <!-- modals to be displayed when user clicks on login or sign up --->
  <div id="myModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>

      <h2>Login</h2>

      <form action="#" method="POST">
          <label for="userid"><p>E-mail address or mobile phone number</p></label>
          <input type="text" id="userid" name="userid">
          <label for="password"><p>Password</p></label>
          <input type="text" id="password" name="password"><br>
 

          <input type="submit" id="submitid" value="Continue">
      </form>

    </div>
  </div>

  <div id="myModal2" class="modal">

    <div class="modal-content">
      <span class="close2">&times;</span>
      <h2>Sign Up</h2>

      <form action="#" method="POST">
          <label for="userid"><p>Your name</p></label>
          <input type="text" id="userid" name="userid">
          <label for="email"><p>E-mail</p></label>
          <input type="text" id="email" name="email">
          <label for="password"><p>Password</p></label>
          <input type="text" id="password" name="password">
          <label for="password2"><p>Please re-enter password</p></label>
          <input type="text" id="password2" name="password2">

          <input type="submit" id="submitid" value="Create mygiftshop account">
      </form>

    </div>
  </div>

  <script src="js-front/mainfrontend.js"></script>

