<!-- banner carousel -->
<section>

  <div id="banner-carousel" class="carousel slide mt-0 w-100" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#banner-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#banner-carousel" data-slide-to="1"></li>
      <li data-target="#banner-carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">

      <div class="carousel-item active">
        <img class="d-block w-100" src="img/banner1.jpg" alt="Picture of a couple">
        <div class="carousel-caption">
            <h2>50% off gifts for a special someone</h2>
        </div>
      </div>

      <div class="carousel-item">
        <img class="d-block w-100" src="img/banner2.jpg" alt="Picture of a mom a two babies">
        <div class="carousel-caption">
            <h2>Technology for life's special moments...</h2>
        </div>
      </div>

      <div class="carousel-item">
        <img class="d-block w-100" src="img/banner3.jpg" alt="Picture of a college student">
        <div class="carousel-caption">
              <h2>... and some of the challenging ones!</h2>
        </div>
      </div>
        <!-- arrows -->
        <a class="carousel-control-prev" href="#banner-carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#banner-carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
  </div>
</section>

<section>

  <div class="product-categories mt-4 mb-5">
    <div class="row" style="max-width: 1000px; margin: 0 auto !important;">
      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <div class="carousel-cell">
              <a href="/product/category/Computers"><h3>Computers</h3>
              <img src="img/applemacbookair.jpg" alt="Apple Macbook Air"></a>
          </div>
      </div>

      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <div class="carousel-cell">
              <a href="/product/category/Smart Home"><h3>Smart Home</h3>
              <img src="img/applehomepod.jpg" alt="Apple Homepod"></a>
          </div>
      </div>

      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="carousel-cell">
              <a href="/product/category/Cameras"><h3>Cameras</h3>
              <img src="img/polaroidonestep2.jpg" alt="Polaroid One Step 2"></a>
          </div>
      </div>

      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <div class="carousel-cell">
              <a href="/product/category/Videogames"><h3>Videogames</h3>
              <img src="img/playstation4white.jpg" alt="Playstation 4 - White"></a>
          </div>
      </div>


    </div>
  </div>

    

</section>


<section>

    <h2>bestsellers</h2>

    <div class="carousel" id="bestsellers-carousel" data-flickity='{ "cellAlign": "left" , "wrapAround": "true", "groundCells" : "true" }'>
        {{#each productData}}
            <div class="flickity-carousel-cell">
                <a href="/product/{{this._id}}"><img src="img/uploads/{{this.picture}}" alt="{{this.name}}">
                <p>{{this.name}}</p>
                <p>{{this.category}}</p>
                <p>$ {{this.price}}</p></a>
            </div>
        {{/each}}
    </div>

</section>